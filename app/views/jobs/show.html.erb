<p id="notice"><%= notice %></p>
  <h2><%= @job.name %></h2>
<%= @job.updated_at.strftime("%d/%m/%Y") %>

<br />

<%= @job.title %>

<br /><br />

<%= raw @job.content %>

<br /><br />
<% if current_user %>
  <% if @job.users.exists?(current_user) %>
    <span style="color:green;">Du har sökt jobbet</span>
  <% else %>
    <%= link_to("Sök jobbet", add_job_path(@job.id), :method => :put) %>
  <% end %>
<% else %>
  <p>Du måste vara <%= link_to "inloggad", new_user_session_path %> och <%= link_to "registrerad", new_user_registration_path %> för att kunna ansöka.</p>
<% end %>

